<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<TabPane prefHeight="675.0" prefWidth="1188.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.skylarreed.schedulingapp.controllers.OverviewController">
    <Tab text="Appointments">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="366.0" prefWidth="976.0">
            <VBox prefWidth="1135.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0">
                <padding>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
                <HBox>
                    <VBox.margin>
                        <Insets bottom="8.0" />
                    </VBox.margin>
                    <Label fx:id="appointmentMessageLabel" alignment="CENTER" textAlignment="CENTER" />
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_RIGHT" spacing="8.0">
                        <ToggleButton fx:id="monthTgButton" onAction="#onActionChangeFilterMonth" text="Current Month">
                            <toggleGroup>
                                <ToggleGroup fx:id="selectAppointmentFilter" />
                            </toggleGroup>
                        </ToggleButton>
                        <ToggleButton fx:id="weekTgButton" onAction="#onActionChangeFilterWeek" text="Current Week" toggleGroup="$selectAppointmentFilter" />
                  <ToggleButton fx:id="allTgButton" onAction="#onActionChangeFilterAll" text="All">
                     <toggleGroup>
                        <ToggleGroup fx:id="selectAppointmentFilter1" />
                     </toggleGroup>
                  </ToggleButton>
                    </HBox>
                </HBox>
                <TableView fx:id="appointmentTableView" onMouseClicked="#onClickModifyAppointment" prefHeight="456.0" prefWidth="1089.0" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label fx:id="appointmentTablePlaceholder" text="Click Schedule Appointment to create a new appointment." />
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="appointmentIDColumn" minWidth="0.0" prefWidth="25.0" text="ID" />
                        <TableColumn fx:id="appointmentTitleColumn" minWidth="128" prefWidth="211.0" text="Title" />
                        <TableColumn fx:id="appointmentDescriptionColumn" minWidth="128" prefWidth="198.0" text="Description" />
                        <TableColumn fx:id="appointmentLocationColumn" minWidth="64" text="Location" />
                        <TableColumn fx:id="appointmentContactColumn" minWidth="15.0" prefWidth="60.0" text="Contact" />
                        <TableColumn fx:id="appointmentTypeColumn" minWidth="64.0" prefWidth="66.0" text="Type" />
                        <TableColumn fx:id="appointmentStartColumn" minWidth="102.0" prefWidth="158.0" text="Start Time" />
                        <TableColumn fx:id="appointmentEndColumn" minWidth="102.0" prefWidth="141.0" text="End Time" />
                        <TableColumn fx:id="appointmentCustomerIDColumn" minWidth="32" prefWidth="120.0" text="Customer ID" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="16.0">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                    <Button mnemonicParsing="false" onAction="#onActionModifyAppointment" text="Update Appointment" />
                    <Button mnemonicParsing="false" onAction="#onActionDeleteAppointment" text="Delete Appointment" />
                    <Button mnemonicParsing="false" onAction="#onActionScheduleAppointment" text="Schedule Appointment" />
                </HBox>
            </VBox>
        </AnchorPane>
    </Tab>
    <Tab text="Customers">
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <padding>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
                <TableView fx:id="customerTableView" onMouseClicked="#onClickModifyCustomer" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label fx:id="customerTableTemp" text="Click Add Customer to create a new customer." />
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="customerIDColumn" minWidth="32" text="ID" />
                        <TableColumn fx:id="customerNameColumn" minWidth="256" text="Name" />
                        <TableColumn fx:id="customerAddressColumn" minWidth="384" text="Address" />
                        <TableColumn fx:id="customerPhoneColumn" minWidth="128" text="Phone Number" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="16.0">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                    <Button mnemonicParsing="false" onAction="#onActionModifyCustomer" text="Modify Customer" />
                    <Button mnemonicParsing="false" onAction="#onActionDeleteCustomer" text="Delete Customer" />
                    <Button mnemonicParsing="false" onAction="#onActionNewCustomer" text="Add Customer" />
                    <Label fx:id="customerMessageLabel" alignment="CENTER" textAlignment="CENTER" />
                </HBox>
            </VBox>
        </AnchorPane>
    </Tab>
    <Tab text="Reports">
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <padding>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
                <HBox alignment="CENTER" spacing="16.0">
                    <VBox.margin>
                        <Insets bottom="16.0" />
                    </VBox.margin>
                    <Button mnemonicParsing="false" onAction="#onActionTotalAppointments" text="Total Appointments" />
                    <Button mnemonicParsing="false" onAction="#onActionScheduleContact" text="Schedule By Contact" />
                    <Button mnemonicParsing="false" onAction="#onActionCustomerCountries" text="Customer Countries" />
                </HBox>
                <TextArea fx:id="reportTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
            </VBox>
        </AnchorPane>
    </Tab>
</TabPane>
